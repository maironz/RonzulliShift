                    android:layout_height="30sp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/dc_button1_10"
                    android:background="#64DD17" />

                <Button
                    android:id="@+id/dc_button1_12"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/dc_button1_11"
                    android:background="#AEEA00" />

                <Button
                    android:id="@+id/dc_button1_13"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/dc_button1_12"
                    android:background="#FFD600" />

                <Button
                    android:id="@+id/dc_button1_14"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/dc_button1_13"
                    android:background="#FFAB00" />

                <Button
                    android:id="@+id/dc_button1_15"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/dc_button1_14"
                    android:background="#FF6D00" />

                <Button
                    android:id="@+id/dc_button1_16"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/dc_button1_15"
                    android:background="#DD2C00" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <Button
        android:id="@+id/dc_button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok"/>
</LinearLayout>